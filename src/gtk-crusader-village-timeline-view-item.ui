<?xml version="1.0" encoding="UTF-8"?>
<interface>
  <requires lib="gtk" version="4.0"/>
  <template class="GtkCrusaderVillageTimelineViewItem" parent="GtkCrusaderVillageUtilBin">
    <property name="child">
      <object class="GtkCenterBox">
        <property name="orientation">GTK_ORIENTATION_HORIZONTAL</property>

        <property name="start-widget">
          <object class="GtkBox">
            <property name="orientation">GTK_ORIENTATION_HORIZONTAL</property>
            <child>
              <object class="GtkImage" id="inactive_indicator">
                <style>
                  <class name="icon-error"/>
                </style>
                <property name="margin-start">5</property>
                <property name="margin-end">10</property>
                <property name="visible">FALSE</property>
                <property name="icon-name">step-over-symbolic</property>
              </object>
            </child>
            <child>
              <object class="GtkImage" id="insert_indicator">
                <property name="margin-start">5</property>
                <property name="margin-end">10</property>
                <property name="visible">FALSE</property>
                <property name="icon-name">arrow-turn-left-up-symbolic</property>
              </object>
            </child>
            <child>
              <object class="GtkLabel" id="left"/>
            </child>
          </object>
        </property>
        
        <property name="center-widget">
          <object class="GtkLabel" id="center"/>
        </property>
        
        <property name="end-widget">
          <object class="GtkLabel" id="right">
            <property name="margin-start">10</property>
            <property name="margin-end">15</property>
          </object>
        </property>
        
      </object>
    </property>
  </template>
</interface>
