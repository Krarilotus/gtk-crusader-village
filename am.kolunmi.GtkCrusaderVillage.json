{
    "id" : "am.kolunmi.GtkCrusaderVillage",
    "runtime" : "org.gnome.Platform",
    "runtime-version" : "47",
    "sdk" : "org.gnome.Sdk",
    "command" : "gtk-crusader-village",
    "finish-args" : [
        "--share=network",
        "--share=ipc",
        "--socket=fallback-x11",
        "--device=dri",
        "--socket=wayland"
    ],
    "cleanup" : [
        "/include",
        "/lib/pkgconfig",
        "/man",
        "/share/doc",
        "/share/gtk-doc",
        "/share/man",
        "/share/pkgconfig",
        "*.la",
        "*.a"
    ],
    "modules" : [
        {
            "name" : "gtk-crusader-village",
            "builddir" : true,
            "buildsystem" : "meson",
            "sources" : [
                {
                    "type": "git",
                    "branch": "master",
                    "url": "https://github.com/kolunmi/gtk-crusader-village.git"
                }
            ]
        }
    ]
}
